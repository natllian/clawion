{
	"name": "clawion",
	"type": "module",
	"version": "0.1.0",
	"license": "MIT",
	"bin": {
		"clawion": "bin/clawion.ts"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "vitest run",
		"test:watch": "vitest",
		"coverage": "vitest run --coverage",
		"lint": "biome check . --config-path=./biome.json",
		"lint:fix": "biome check . --write --config-path=./biome.json",
		"clean": "rm -rf node_modules && rm -rf .next && rm -rf .dist",
		"clawion": "tsx bin/clawion",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json}": [
			"biome check --write --error-on-warnings --no-errors-on-unmatched --files-ignore-unknown=true --config-path=./biome.json"
		]
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"commander": "^12.1.0",
		"lucide-react": "^0.563.0",
		"next": "16.1.6",
		"radix-ui": "^1.4.3",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"tailwind-merge": "^3.4.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^22",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitest/coverage-v8": "^2.1.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"tailwindcss": "^4",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5",
		"vitest": "^2.1.8"
	}
}
