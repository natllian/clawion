{
	"name": "clawion",
	"type": "module",
	"version": "0.1.0",
	"license": "MIT",
	"packageManager": "pnpm@10.23.0",
	"engines": {
		"node": ">=22"
	},
	"bin": {
		"clawion": "dist/bin/clawion.js"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"dev": "next dev",
		"build": "pnpm build:ui",
		"build:cli": "tsup --config tsup.config.ts",
		"build:ui": "next build",
		"build:ui:dist": "tsx scripts/prepare-ui-dist.ts",
		"start": "next start",
		"test": "vitest run",
		"test:watch": "vitest",
		"coverage": "vitest run --coverage",
		"lint": "biome check . --config-path=./biome.json",
		"lint:fix": "biome check . --write --config-path=./biome.json",
		"types": "tsc --noEmit -p tsconfig.json",
		"types:watch": "tsc --noEmit -p tsconfig.json --watch",
		"clean": "rm -rf node_modules && rm -rf .next && rm -rf dist",
		"clean:dist": "rm -rf dist",
		"clawion": "tsx bin/clawion",
		"prepare": "husky",
		"prepack": "pnpm clean:dist && pnpm build:cli && pnpm build:ui && pnpm build:ui:dist"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json}": [
			"biome check --write --error-on-warnings --no-errors-on-unmatched --files-ignore-unknown=true --config-path=./biome.json"
		]
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"commander": "^14.0.3",
		"date-fns": "^4.1.0",
		"lucide-react": "^0.563.0",
		"next": "16.1.6",
		"radix-ui": "^1.4.3",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-markdown": "^10.1.0",
		"remark-gfm": "^4.0.1",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@tailwindcss/postcss": "^4",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@types/node": "^22",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitejs/plugin-react": "^5.1.3",
		"@vitest/coverage-v8": "^4.0.18",
		"husky": "^9.1.7",
		"jsdom": "^28.0.0",
		"lint-staged": "^16.2.7",
		"tailwindcss": "^4",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5",
		"vitest": "^4.0.18"
	}
}
